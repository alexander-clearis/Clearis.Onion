{
	"compilerOptions": {
		//language-level
		"target": "ES6",
		//how to import modules.
		"moduleResolution": "Node",
		"esModuleInterop": true,
		//coding preferences.
		"strict": true,
		"noImplicitAny": false,
		//Necessary config to compile Preact.
		//https://preactjs.com/guide/v10/typescript/#typescript-configuration
		"jsx": "react",
		"jsxFactory": "h",
		"jsxFragmentFactory": "Fragment",

		"allowJs": true,
		"checkJs": true,
		//configure the output
		"baseUrl": "./",
//		"outDir": "./build",
		"sourceMap": true
	},
	"include": [
		"src"
	]
}